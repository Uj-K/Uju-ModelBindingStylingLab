@model UserProfile

@{
    ViewData["Title"] = "J. Doe profile page";
}

<h1>Profile Page</h1>

<div>
    <div class="card" style="width: 50rem;">
        <img src="~/image/ada.jpg" class="card-img-top" alt="ada" style="width: 100%; height: auto; max-width: 200px; object-fit: contain">
        <div class="card-body">
            <h5 class="card-title">UserProfile</h5>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserProfileId)
                </dt>
                <dd class="col-sm-10">
                    @Model.UserProfileId
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-10">
                    @Model.FullName
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Model.Email
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Model.PhoneNumber
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </dt>
                <dd class="col-sm-10">
                    @Model.ImageUrl
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GitHubUrl)
                </dt>
                <dd class="col-sm-10">
                    @Model.GitHubUrl
                </dd>
                <dt>Skilled Languages</dt>
                <dd>
                    <ul>
                        @foreach (string languageSkill in Model.SkilledLanguages)
                        {
                            <li>@languageSkill</li>
                        }
                    </ul>
                </dd>
            </dl>
        </div>
    </div>
</div>
